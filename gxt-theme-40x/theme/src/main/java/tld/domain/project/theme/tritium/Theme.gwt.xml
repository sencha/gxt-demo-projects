<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
    "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module>
  <inherits name='com.sencha.gxt.ui.GXT'/>

  <inherits name="tld.domain.project.theme.tritium.BaseTheme"/>

  <replace-with class="tld.domain.project.theme.tritium.custom.client.button.TritiumButtonCellAppearance">
    <when-type-is class="com.sencha.gxt.cell.core.client.ButtonCell.ButtonCellAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.custom.client.button.TritiumButtonCellToolBarAppearance">
    <when-type-is class="com.sencha.gxt.cell.core.client.ButtonCell.ButtonCellAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.custom.client.field.TritiumCheckBoxAppearance">
    <when-type-is class="com.sencha.gxt.cell.core.client.form.CheckBoxCell.CheckBoxAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.custom.client.field.TritiumRadioAppearance">
    <when-type-is class="com.sencha.gxt.cell.core.client.form.RadioCell.RadioAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.custom.client.field.TritiumHtmlEditorAppearance">
    <when-type-is class="com.sencha.gxt.widget.core.client.form.HtmlEditor.HtmlEditorAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.custom.client.slider.TritiumHorizontalSliderAppearance">
    <any>
      <when-type-is class="com.sencha.gxt.cell.core.client.SliderCell.SliderAppearance"/>
      <when-type-is class="com.sencha.gxt.cell.core.client.SliderCell.HorizontalSliderAppearance"/>
    </any>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.custom.client.slider.TritiumVerticalSliderAppearance">
    <when-type-is class="com.sencha.gxt.cell.core.client.SliderCell.VerticalSliderAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.client.base.tabs.TritiumPlainTabPanelAppearance">
    <when-type-is class="com.sencha.gxt.widget.core.client.PlainTabPanel.PlainTabPanelAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.client.base.tabs.TritiumPlainTabPanelBottomAppearance">
    <when-type-is class="com.sencha.gxt.widget.core.client.PlainTabPanel.PlainTabPanelBottomAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.client.base.tabs.TritiumTabPanelAppearance">
    <when-type-is class="com.sencha.gxt.widget.core.client.TabPanel.TabPanelAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.client.base.tabs.TritiumTabPanelBottomAppearance">
    <when-type-is class="com.sencha.gxt.widget.core.client.TabPanel.TabPanelBottomAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <replace-with class="tld.domain.project.theme.tritium.custom.client.toolbar.TritiumToolBarAppearance">
    <when-type-is class="com.sencha.gxt.widget.core.client.toolbar.ToolBar.ToolBarAppearance"/>
    <when-property-is name="gxt.theme" value="tritium"/>
  </replace-with>

  <!-- Specify the paths for translatable code -->
  <source path='custom/client'/>

</module>
